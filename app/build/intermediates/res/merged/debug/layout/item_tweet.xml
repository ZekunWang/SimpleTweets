<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rv_item_background"
    android:padding="@dimen/item_view_padding">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/item_img_profile_margin"
        android:id="@+id/ivProfile"
        tools:src="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_img_profile_margin"
        android:textStyle="bold"
        android:singleLine="true"
        android:textColor="@color/item_text_username"
        android:textSize="@dimen/item_text_username"
        tools:background="#ffff00"
        tools:text="Username"
        android:id="@+id/tvUsername"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/item_text_relative_time"
        android:textSize="@dimen/item_text_relative_time"
        tools:text="ScreenName"
        tools:background="#00ffff"
        android:id="@+id/tvScreenName"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/tvUsername"
        android:layout_alignBottom="@+id/tvUsername"
        android:layout_toRightOf="@+id/tvUsername"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/item_text_relative_time"
        android:textSize="@dimen/item_text_relative_time"
        tools:background="#00ffff"
        tools:text="1m"
        android:id="@+id/tvRelativeTime"
        android:layout_alignTop="@+id/tvUsername"
        android:layout_alignBottom="@+id/tvUsername"
        android:layout_alignParentRight="true"/>
    <com.codepath.apps.simpletweets.others.LinkifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_content_margin"
        android:textColor="@color/item_text_content"
        android:textSize="@dimen/item_text_username"
        tools:text="Body"
        android:autoLink="all"
        android:textColorLink="@color/colorPrimary"
        android:id="@+id/tvBody"
        android:layout_below="@+id/tvUsername"
        android:layout_alignLeft="@+id/tvUsername"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_padding"
        android:layout_marginRight="@dimen/item_icon_margin"
        tools:background="#00ffff"
        android:src="@drawable/ic_reply"
        android:id="@+id/ivReply"
        android:layout_alignLeft="@+id/tvUsername"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_padding"
        android:layout_marginLeft="@dimen/item_icon_margin"
        android:layout_marginRight="@dimen/item_view_padding"
        tools:background="#00ffff"
        android:src="@drawable/ic_twitter_retweet"
        android:id="@+id/ivRetweet"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/ivReply"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:layout_width="@dimen/item_icon_text_width"
        android:layout_height="@dimen/item_icon_text_height"
        android:layout_marginTop="@dimen/item_view_padding"
        android:layout_marginRight="@dimen/item_view_padding"
        android:textColor="@color/item_text_relative_time"
        android:textSize="@dimen/item_text_relative_time"
        tools:background="#00ffff"
        android:text="0"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tvRetweetCount"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/ivRetweet"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_padding"
        android:layout_marginRight="@dimen/item_view_padding"
        tools:background="#00ffff"
        tools:src="@drawable/ic_heart"
        android:drawablePadding="@dimen/item_view_padding"
        android:id="@+id/ivFavorite"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/tvRetweetCount"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:layout_width="@dimen/item_icon_text_width"
        android:layout_height="@dimen/item_icon_text_height"
        android:layout_marginTop="@dimen/item_view_padding"
        android:layout_marginRight="@dimen/item_view_padding"
        android:textColor="@color/item_text_relative_time"
        android:textSize="@dimen/item_text_relative_time"
        tools:background="#00ffff"
        android:text="0"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tvFavoriteCount"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/ivFavorite"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_view_padding"
        android:layout_marginRight="@dimen/item_view_padding"
        tools:background="#00ffff"
        android:src="@drawable/ic_message_text"
        android:drawablePadding="@dimen/item_view_padding"
        android:id="@+id/ivMessage"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/tvFavoriteCount"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>