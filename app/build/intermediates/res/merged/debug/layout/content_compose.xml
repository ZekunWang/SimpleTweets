<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_compose"
    tools:context="com.codepath.apps.simpletweets.activities.ComposeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_view_padding"
        android:text="@string/compose_tweet"
        android:textAllCaps="false"
        android:id="@+id/btnCompose"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_background"
        android:onClick="onSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/tvAvailableChars"
        android:text="140"
        android:textColor="@color/item_text_content"
        tools:background="#00ffff"
        android:layout_alignTop="@+id/btnCompose"
        android:layout_alignBottom="@+id/btnCompose"
        android:layout_toLeftOf="@+id/btnCompose"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:padding="@dimen/item_view_padding"
        android:ems="10"
        android:gravity="top"
        tools:text="mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm"
        android:hint="What's happening?"
        android:textSize="@dimen/item_text_username"
        android:textColor="@color/item_text_content"
        android:background="@drawable/item_view_background"
        android:id="@+id/etContent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnCompose"/>
</RelativeLayout>
